# ============================================
# TelePrompt Pro - Environment Variables
# ============================================

# ============================================
# Application Settings
# ============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/teleprompt_pro?schema=public
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=teleprompt_pro

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# JWT & Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=30d

# ============================================
# OAuth Providers
# ============================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple OAuth
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./certs/apple-private-key.p8

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# ============================================
# Stripe Payment Integration
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for subscription tiers
STRIPE_PRICE_BASIC=price_basic_monthly
STRIPE_PRICE_CREATOR=price_creator_monthly
STRIPE_PRICE_PROFESSIONAL=price_professional_monthly
STRIPE_PRICE_ENTERPRISE=price_enterprise_monthly

# ============================================
# RevenueCat (Mobile IAP)
# ============================================
REVENUECAT_API_KEY=your-revenuecat-api-key
REVENUECAT_IOS_APP_ID=your-ios-app-id
REVENUECAT_ANDROID_APP_ID=your-android-app-id

# ============================================
# AI Services
# ============================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORGANIZATION=org-your-organization-id

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key

# Anthropic Claude (optional)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# ============================================
# Cloud Storage (AWS S3)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=teleprompt-pro-storage
AWS_S3_BUCKET_RECORDINGS=teleprompt-pro-recordings
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Alternative: MinIO (for local development)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=teleprompt-pro

# ============================================
# Google Cloud Storage (Alternative)
# ============================================
GCS_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=teleprompt-pro-storage
GCS_KEY_FILE=./gcs-service-account.json

# ============================================
# Email Services
# ============================================

# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@teleprompt.pro
SENDGRID_FROM_NAME=TelePrompt Pro

# Alternative: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# ============================================
# Push Notifications
# ============================================

# Firebase Cloud Messaging
FCM_PROJECT_ID=your-firebase-project-id
FCM_PRIVATE_KEY=your-firebase-private-key
FCM_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FCM_SERVER_KEY=your-fcm-server-key

# ============================================
# Analytics & Monitoring
# ============================================

# Google Analytics
GA_TRACKING_ID=G-XXXXXXXXXX

# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# DataDog (APM & Monitoring)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SERVICE_NAME=teleprompt-pro-api

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_UPLOAD_MAX=10

# ============================================
# WebSocket Configuration
# ============================================
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/ws
WEBSOCKET_CORS_ORIGIN=*

# ============================================
# Video Processing
# ============================================
FFMPEG_PATH=/usr/bin/ffmpeg
FFPROBE_PATH=/usr/bin/ffprobe
VIDEO_PROCESSING_QUEUE=video-processing
MAX_VIDEO_SIZE_MB=1000
SUPPORTED_VIDEO_FORMATS=mp4,mov,webm,avi

# ============================================
# Machine Learning Models
# ============================================
ML_MODEL_PATH=./models
EYE_CONTACT_MODEL_PATH=./models/eye_contact_v3
VOICE_CLONE_MODEL_PATH=./models/voice_clone_v2
FACE_DETECTION_MODEL=mediapipe

# ============================================
# Message Queue (Optional)
# ============================================
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Alternative: AWS SQS
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/account-id/queue-name
SQS_REGION=us-east-1

# ============================================
# Feature Flags
# ============================================
ENABLE_AI_FEATURES=true
ENABLE_VOICE_SCROLLING=true
ENABLE_EYE_CORRECTION=false
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true

# ============================================
# Subscription Tier Limits
# ============================================

# Free Tier
FREE_TIER_SCRIPT_LIMIT=10
FREE_TIER_RECORDING_DURATION=300
FREE_TIER_STORAGE_GB=1
FREE_TIER_AI_WORDS_MONTHLY=0

# Creator Tier
CREATOR_TIER_SCRIPT_LIMIT=100
CREATOR_TIER_RECORDING_DURATION=1800
CREATOR_TIER_STORAGE_GB=10
CREATOR_TIER_AI_WORDS_MONTHLY=1000

# Professional Tier
PROFESSIONAL_TIER_SCRIPT_LIMIT=-1
PROFESSIONAL_TIER_RECORDING_DURATION=-1
PROFESSIONAL_TIER_STORAGE_GB=100
PROFESSIONAL_TIER_AI_WORDS_MONTHLY=10000

# Enterprise Tier
ENTERPRISE_TIER_SCRIPT_LIMIT=-1
ENTERPRISE_TIER_RECORDING_DURATION=-1
ENTERPRISE_TIER_STORAGE_GB=1000
ENTERPRISE_TIER_AI_WORDS_MONTHLY=100000

# ============================================
# Security Settings
# ============================================
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-key
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/api/csp-report

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/application.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=10

# ============================================
# Development Tools
# ============================================
DEBUG=teleprompt:*
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true

# ============================================
# Testing
# ============================================
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/teleprompt_pro_test?schema=public
TEST_REDIS_URL=redis://localhost:6380

# ============================================
# Deployment
# ============================================
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api
CDN_URL=https://cdn.teleprompt.pro
STATIC_ASSETS_URL=https://assets.teleprompt.pro

# ============================================
# Support & Contact
# ============================================
SUPPORT_EMAIL=support@teleprompt.pro
ADMIN_EMAIL=admin@teleprompt.pro
CONTACT_FORM_RECIPIENT=contact@teleprompt.pro
