# Kubernetes Secrets Template
# Copy this file to secrets.yaml and fill in actual values
# NEVER commit secrets.yaml to version control!

apiVersion: v1
kind: Secret
metadata:
  name: database-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  username: postgres
  password: CHANGE_ME_STRONG_PASSWORD
  connection-url: postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@postgres:5432/teleprompter_prod
---
apiVersion: v1
kind: Secret
metadata:
  name: redis-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  password: CHANGE_ME_REDIS_PASSWORD
  connection-url: redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379/0
---
apiVersion: v1
kind: Secret
metadata:
  name: auth-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  jwt-secret: CHANGE_ME_JWT_SECRET_MINIMUM_32_CHARACTERS
  jwt-refresh-secret: CHANGE_ME_JWT_REFRESH_SECRET_MINIMUM_32_CHARACTERS
  session-secret: CHANGE_ME_SESSION_SECRET_MINIMUM_32_CHARACTERS
---
apiVersion: v1
kind: Secret
metadata:
  name: oauth-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  # Google OAuth
  google-client-id: YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
  google-client-secret: YOUR_GOOGLE_CLIENT_SECRET

  # Apple Sign In
  apple-client-id: com.teleprompter.app
  apple-team-id: YOUR_APPLE_TEAM_ID
  apple-key-id: YOUR_APPLE_KEY_ID
  apple-private-key: |
    -----BEGIN PRIVATE KEY-----
    YOUR_APPLE_PRIVATE_KEY_HERE
    -----END PRIVATE KEY-----

  # Microsoft OAuth
  microsoft-client-id: YOUR_MICROSOFT_CLIENT_ID
  microsoft-client-secret: YOUR_MICROSOFT_CLIENT_SECRET
  microsoft-tenant-id: common
---
apiVersion: v1
kind: Secret
metadata:
  name: stripe-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  secret-key: sk_live_YOUR_STRIPE_SECRET_KEY
  webhook-secret: whsec_YOUR_STRIPE_WEBHOOK_SECRET
  publishable-key: pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
---
apiVersion: v1
kind: Secret
metadata:
  name: openai-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  api-key: sk-YOUR_OPENAI_API_KEY
  organization-id: org-YOUR_ORGANIZATION_ID
---
apiVersion: v1
kind: Secret
metadata:
  name: gemini-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  api-key: YOUR_GEMINI_API_KEY
---
apiVersion: v1
kind: Secret
metadata:
  name: aws-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  access-key-id: YOUR_AWS_ACCESS_KEY_ID
  secret-access-key: YOUR_AWS_SECRET_ACCESS_KEY
  bucket-name: teleprompter-media-prod
  region: us-east-1
---
apiVersion: v1
kind: Secret
metadata:
  name: sendgrid-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  api-key: SG.YOUR_SENDGRID_API_KEY
  from-email: noreply@teleprompter.pro
  from-name: TelePrompt Pro
---
apiVersion: v1
kind: Secret
metadata:
  name: firebase-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  service-account-key: |
    {
      "type": "service_account",
      "project_id": "YOUR_PROJECT_ID",
      "private_key_id": "YOUR_PRIVATE_KEY_ID",
      "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n",
      "client_email": "firebase-adminsdk@YOUR_PROJECT_ID.iam.gserviceaccount.com",
      "client_id": "YOUR_CLIENT_ID",
      "auth_uri": "https://accounts.google.com/o/oauth2/auth",
      "token_uri": "https://oauth2.googleapis.com/token",
      "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
      "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk%40YOUR_PROJECT_ID.iam.gserviceaccount.com"
    }
---
apiVersion: v1
kind: Secret
metadata:
  name: revenuecat-secrets
  namespace: teleprompter-prod
type: Opaque
stringData:
  api-key: YOUR_REVENUECAT_API_KEY
  public-key: YOUR_REVENUECAT_PUBLIC_KEY
---
# Instructions for creating secrets:
#
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Fill in all CHANGE_ME and YOUR_ values with actual secrets
# 3. Apply to cluster: kubectl apply -f secrets.yaml
# 4. Verify: kubectl get secrets -n teleprompter-prod
# 5. NEVER commit secrets.yaml to git!
#
# For production, use external secret management:
# - AWS Secrets Manager
# - HashiCorp Vault
# - Google Secret Manager
# - Azure Key Vault
#
# Example with AWS Secrets Manager:
# kubectl create secret generic database-secrets \
#   --from-literal=connection-url=$(aws secretsmanager get-secret-value \
#   --secret-id prod/teleprompter/database-url \
#   --query SecretString --output text) \
#   --namespace teleprompter-prod
