# ==================================
# TelePrompt Pro - Environment Variables
# ==================================

# ----------------------------------
# Application
# ----------------------------------
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------
# Database
# ----------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/teleprompt_pro?schema=public

# ----------------------------------
# Redis
# ----------------------------------
REDIS_URL=redis://localhost:6379
CACHE_ENABLED=true

# ----------------------------------
# JWT Authentication
# ----------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=30d

# ----------------------------------
# OAuth Providers
# ----------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Apple Sign In
APPLE_CLIENT_ID=your.apple.client.id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./keys/apple-private-key.p8

# Microsoft Azure AD
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_TENANT_ID=common

# ----------------------------------
# Payment Processing (Stripe)
# ----------------------------------
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Subscription Plans
STRIPE_PRICE_CREATOR_MONTHLY=price_creator_monthly_id
STRIPE_PRICE_CREATOR_YEARLY=price_creator_yearly_id
STRIPE_PRICE_PROFESSIONAL_MONTHLY=price_professional_monthly_id
STRIPE_PRICE_PROFESSIONAL_YEARLY=price_professional_yearly_id
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# ----------------------------------
# Cloud Storage (AWS S3 or compatible)
# ----------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_RECORDINGS=teleprompt-recordings
S3_BUCKET_UPLOADS=teleprompt-uploads
S3_BUCKET_THUMBNAILS=teleprompt-thumbnails

# Alternative: CloudFlare R2
# CLOUDFLARE_ACCOUNT_ID=your_account_id
# CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key
# CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key
# R2_BUCKET_NAME=teleprompt-storage

# ----------------------------------
# CDN
# ----------------------------------
CDN_URL=https://cdn.teleprompt.pro
CDN_RECORDINGS_URL=https://cdn.teleprompt.pro/recordings
CDN_THUMBNAILS_URL=https://cdn.teleprompt.pro/thumbnails

# ----------------------------------
# Email Service (SendGrid or similar)
# ----------------------------------
SENDGRID_API_KEY=SG.your_sendgrid_api_key
EMAIL_FROM=noreply@teleprompt.pro
EMAIL_FROM_NAME=TelePrompt Pro

# Alternative: AWS SES
# AWS_SES_REGION=us-east-1
# AWS_SES_ACCESS_KEY=your_ses_access_key
# AWS_SES_SECRET_KEY=your_ses_secret_key

# ----------------------------------
# AI Services
# ----------------------------------
# OpenAI for script generation and enhancement
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Alternative: Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Speech-to-Text (for voice scrolling)
SPEECH_TO_TEXT_PROVIDER=openai
DEEPGRAM_API_KEY=your_deepgram_api_key

# ----------------------------------
# WebSocket
# ----------------------------------
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/ws
WEBSOCKET_CORS_ORIGIN=http://localhost:5173

# ----------------------------------
# Rate Limiting
# ----------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Rate Limiting
WS_RATE_LIMIT_POINTS=100
WS_RATE_LIMIT_DURATION=60
WS_RATE_LIMIT_BLOCK_DURATION=300

# ----------------------------------
# Security
# ----------------------------------
# Password hashing
BCRYPT_ROUNDS=10

# CORS
CORS_ENABLED=true
CORS_CREDENTIALS=true

# ----------------------------------
# Monitoring & Logging
# ----------------------------------
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Performance Monitoring
APM_ENABLED=false
APM_SERVICE_NAME=teleprompt-api
APM_SERVER_URL=http://localhost:8200

# ----------------------------------
# Analytics
# ----------------------------------
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# ----------------------------------
# Feature Flags
# ----------------------------------
FEATURE_AI_GENERATION=true
FEATURE_VOICE_SCROLLING=true
FEATURE_COLLABORATION=true
FEATURE_VIDEO_RECORDING=true
FEATURE_TEMPLATES=true
FEATURE_ANALYTICS=true

# ----------------------------------
# Microservices
# ----------------------------------
# AI Service
AI_SERVICE_URL=http://localhost:3002
AI_SERVICE_TIMEOUT=30000

# Recording Service
RECORDING_SERVICE_URL=http://localhost:3003
RECORDING_SERVICE_TIMEOUT=60000

# Collaboration Service
COLLABORATION_SERVICE_URL=http://localhost:3004

# Analytics Service
ANALYTICS_SERVICE_URL=http://localhost:3005

# Subscription Service
SUBSCRIPTION_SERVICE_URL=http://localhost:3006

# Notification Service
NOTIFICATION_SERVICE_URL=http://localhost:3007
NOTIFICATION_SERVICE_TIMEOUT=10000

# Storage Service
STORAGE_SERVICE_URL=http://localhost:3008

# ----------------------------------
# ML Models
# ----------------------------------
ML_MODELS_PATH=../ml-models/models
ML_VOICE_DETECTION_MODEL=voice_activity_detection.h5
ML_EMOTION_ANALYSIS_MODEL=emotion_analysis.h5
ML_PACE_ANALYSIS_MODEL=pace_analysis.h5

# ----------------------------------
# Cron Jobs & Background Workers
# ----------------------------------
ENABLE_CRON_JOBS=true
CLEANUP_OLD_RECORDINGS_CRON=0 2 * * *
PROCESS_ANALYTICS_CRON=0 */6 * * *
SYNC_SUBSCRIPTIONS_CRON=0 */1 * * *

# ----------------------------------
# Testing
# ----------------------------------
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/teleprompt_test?schema=public
TEST_REDIS_URL=redis://localhost:6380

# ----------------------------------
# Development Tools
# ----------------------------------
DEBUG=true
SWAGGER_ENABLED=true
